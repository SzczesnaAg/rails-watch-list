<h1>My lists</h1>

<div style="margin: 12px">
<%= link_to 'Create a movie list', new_list_path, class: "btn btn-primary" %>
</div>

<div>
 <% @lists.each do |list| %>
    <div class="card" style="width: 18rem; display: inline-flex;">
      <div class="card-body">
        <h5 class="card-title"><%= list.name %></h5>
      </div>
    </div>
  <% end %>
</div>


